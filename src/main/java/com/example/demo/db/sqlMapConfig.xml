<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <properties resource="com/example/demo/db/db.properties"/>
  <typeAliases>
  	<typeAlias type="com.example.demo.entity.Account" alias="account"/>
  	<typeAlias type="com.example.demo.entity.QandA" alias="qanda"/>
  	<typeAlias type="com.example.demo.entity.BoardHot" alias="boardhot"/>
  	<typeAlias type="com.example.demo.entity.Board" alias="board"/>
  </typeAliases>
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="${driver}"/>
        <property name="url" value="${url}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="com/example/demo/db/accountMapper.xml"/>
    <mapper resource="com/example/demo/db/qandaMapper.xml"/>
    <mapper resource="com/example/demo/db/boardhotMapper.xml"/>
    <mapper resource="com/example/demo/db/boardMapper.xml"/>
  </mappers>
</configuration>
